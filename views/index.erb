<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @houses.each do |house| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <% if house[:image_url] %>
        <img src="<%= house[:image_url] %>" alt="<%= house[:title] %>" class="w-full h-48 object-cover">
      <% end %>
      
      <div class="p-4">
        <h2 class="text-xl font-semibold mb-2"><%= house[:title] %></h2>
        <p class="text-gray-600 mb-2"><%= house[:location] %></p>
        <p class="text-2xl font-bold text-green-600">
          â‚¬<%= house[:price] %>
        </p>
        
        <% if house[:bedrooms] %>
          <p class="text-gray-600 mt-2">
            <%= house[:bedrooms] %> bedrooms
          </p>
        <% end %>
        
        <div class="mt-4">
          <a href="<%= house[:url] %>" 
             target="_blank"
             class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            View Property
          </a>
        </div>
        
        <div class="mt-2">
          <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">
            Source: <%= house[:source].capitalize %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @houses.empty? %>
  <div class="text-center py-8">
    <p class="text-gray-600">No houses found for the selected sources.</p>
  </div>
<% end %> 